{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C++: g++ build active file (using klabs + kroot libraries)",
			"command": "/usr/bin/g++",
			"args": [
				"${file}",
				"Matrix.cpp",
				"Cn.cpp",
				"CMatrix.cpp",
				"Plu.cpp",
				"CPlu.cpp",
				"Qr.cpp",
				"QRC.cpp",
				"Eig.cpp",
				"Eigen.cpp",
				"Svd.cpp",
				"SVDC.cpp",
				"PLUC.cpp",
				"Poly.cpp",
				"Graph.cpp",
				"Rnt.cpp",
				"Stats.cpp",
				"Prob.cpp",
				"-fdiagnostics-color=always",
				"-g",
				"-pthread",
				"-std=c++17",
				"-m64",
				"-I/home/keung/root_install/include",
				"-L/home/keung/root_install/lib",
				"-lCore",
				"-lImt",
				"-lRIO",
				"-lNet",
				"-lHist",
				"-lGraf",
				"-lGraf3d",
				"-lGpad",
				"-lROOTVecOps",
				"-lTree",
				"-lTreePlayer",
				"-lRint",
				"-lPostscript",
				"-lMatrix",
				"-lPhysics",
				"-lMathCore",
				"-lMathMore",
				"-lThread",
				"-lMultiProc",
				"-lROOTDataFrame",
				"-Wl,-rpath,/home/keung/root_install/lib",
				"-pthread",
				"-lm",
				"-ldl",
				"-rdynamic",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}